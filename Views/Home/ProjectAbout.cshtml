    <h1 style="color: #444; font-size: 24px; text-align: center;">Arduino C++ Kodları</h1>

    <div style="background-color: #1e1e1e; color: white; font-family: 'Courier New', Courier, monospace; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3); margin: 20px auto; max-width: 800px;">
        <pre style="background-color: #252526; padding: 20px; border-radius: 10px; overflow-x: auto; box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.3); color: #d4d4d4; font-size: 14px;">
<span style="color: #569cd6;">#include</span> &lt;Wire.h&gt;
<span style="color: #569cd6;">#include</span> &lt;Adafruit_SSD1306.h&gt;

<span style="color: #569cd6;">#define</span> SCREEN_WIDTH 128
<span style="color: #569cd6;">#define</span> SCREEN_HEIGHT 64

Adafruit_SSD1306 <span style="color: #9cdcfe;">display</span>(SCREEN_WIDTH, SCREEN_HEIGHT, &Wire, -1);

<span style="color: #6a9955;"></span>
<span style="color: #569cd6;">const int</span> pulsePin = A0;
<span style="color: #569cd6;">const int</span> tempPin = A1;

<span style="color: #569cd6;">void</span> <span style="color: #dcdcaa;">setup</span>() {
    Serial.<span style="color: #dcdcaa;">begin</span>(9600);
    <span style="color: #dcdcaa;">pinMode</span>(pulsePin, INPUT);
    <span style="color: #dcdcaa;">pinMode</span>(tempPin, INPUT);

    <span style="color: #6a9955;"></span>
    <span style="color: #569cd6;">if</span> (!<span style="color: #9cdcfe;">display</span>.<span style="color: #dcdcaa;">begin</span>(SSD1306_I2C_ADDRESS, 0x3C)) {
        Serial.<span style="color: #dcdcaa;">println</span>(<span style="color: #ce9178;">"Ekran tapılmadı!"</span>);
        <span style="color: #569cd6;">for</span> (;;);
    }
    <span style="color: #9cdcfe;">display</span>.<span style="color: #dcdcaa;">clearDisplay</span>();
}

<span style="color: #569cd6;">void</span> <span style="color: #dcdcaa;">loop</span>() {
    <span style="color: #569cd6;">int</span> pulseValue = <span style="color: #dcdcaa;">analogRead</span>(pulsePin);
    <span style="color: #569cd6;">int</span> tempValue = <span style="color: #dcdcaa;">analogRead</span>(tempPin);

    <span style="color: #6a9955;"></span>
    <span style="color: #569cd6;">int</span> bpm = <span style="color: #dcdcaa;">map</span>(pulseValue, 0, 1023, 60, 100);
    <span style="color: #569cd6;">float</span> temperature = (tempValue * 5.0 / 1023.0) * 100.0;

    <span style="color: #6a9955;"></span>
    <span style="color: #9cdcfe;">display</span>.<span style="color: #dcdcaa;">clearDisplay</span>();
    <span style="color: #9cdcfe;">display</span>.<span style="color: #dcdcaa;">setTextSize</span>(1);
    <span style="color: #9cdcfe;">display</span>.<span style="color: #dcdcaa;">setTextColor</span>(SSD1306_WHITE);
    <span style="color: #9cdcfe;">display</span>.<span style="color: #dcdcaa;">setCursor</span>(0, 0);
    <span style="color: #9cdcfe;">display</span>.<span style="color: #dcdcaa;">print</span>(<span style="color: #ce9178;">"Nebiz: "</span>);
    <span style="color: #9cdcfe;">display</span>.<span style="color: #dcdcaa;">println</span>(bpm);
    <span style="color: #9cdcfe;">display</span>.<span style="color: #dcdcaa;">print</span>(<span style="color: #ce9178;">"Temperatur: "</span>);
    <span style="color: #9cdcfe;">display</span>.<span style="color: #dcdcaa;">print</span>(temperature);
    <span style="color: #9cdcfe;">display</span>.<span style="color: #dcdcaa;">println</span>(<span style="color: #ce9178;">" C"</span>);
    <span style="color: #9cdcfe;">display</span>.<span style="color: #dcdcaa;">display</span>();

    <span style="color: #6a9955;"></span>
    Serial.<span style="color: #dcdcaa;">print</span>(<span style="color: #ce9178;">"Nebiz: "</span>);
    Serial.<span style="color: #dcdcaa;">print</span>(bpm);
    Serial.<span style="color: #dcdcaa;">print</span>(<span style="color: #ce9178;">", Temperatur: "</span>);
    Serial.<span style="color: #dcdcaa;">println</span>(temperature);

    <span style="color: #dcdcaa;">delay</span>(1000);
}
